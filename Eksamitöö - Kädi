proov1.java

import java.util.Arrays;
import java.util.*;

/*Kui on sisse antud kasutajate hulk ja visatud näppude hulk*/
public class proov1{
	public static void main (String[] arg){
		Votame_kasutajad a1=new Votame_kasutajad("4");
		Viskame_nappe k1=new Viskame_nappe("3");
		Viskame_nappe k2=new Viskame_nappe("9");
		Viskame_nappe k3=new Viskame_nappe("6");
		Viskame_nappe k4=new Viskame_nappe("3");
		a1.lisa(k1);
		a1.lisa(k2);
		a1.lisa(k3);
		a1.lisa(k4);
		
		System.out.println("Kasutajate arv on "+a1.Kasutajad());
		
		System.out.println("Näppude arv on "+k1.NappudeArv());
		System.out.println("Näppude arv on "+k2.NappudeArv());
		System.out.println("Näppude arv on "+k3.NappudeArv());
		System.out.println("Näppude arv on "+k4.NappudeArv());
		
		System.out.println(a1.arvutamine());
		
		
	}
	
}
