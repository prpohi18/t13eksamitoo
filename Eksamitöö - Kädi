TUNNIS EDASIARENDUS:
Viskame_nappe.java

public class Viskame_nappe{
	
	protected String andmed;
	public Viskame_nappe(String uusKood){
	/*koht hetkel andmete sisestamiseks*/
		andmed=uusKood;
	}
	
	/*Mis kogus näppe?*/
	
	public int NappudeArv(){
		return Integer.parseInt(andmed.substring(0, 1));
	}
	
}
__________________________________________________________
Votame_kasutajad.java

public class Votame_kasutajad{
	protected String andmed;
	protected int summa=0;
	
	protected int arvuta=0;
	public Votame_kasutajad(String uusKood){
	/*koht hetkel andmete sisestamiseks*/
		andmed=uusKood;
	}
	
	/*Mitu kasutajat?*/
	public int Kasutajad(){
		return Integer.parseInt(andmed.substring(0, 1));
	}
	
	
	
	void lisa(Viskame_nappe uus){
		summa+=uus.NappudeArv();
	}
	
	int arvutamine(){
		 return(summa - ((summa/ Kasutajad())*Kasutajad())+1);
	}
	
		
}
