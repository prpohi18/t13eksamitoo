Viskame_nappe.java (KODUS TEHTUD)

import java.util.Scanner;
import java.util.Arrays;

public class Viskame_nappe{
	public static void main(String[] args){
		
		Scanner user_input = new Scanner(System.in);
		
		int Kasutajad;
			
		System.out.print("Mitu kasutajat on (min 3 in): ");
		/*Alljärgnev on kasutajate hulga välja selgitamiseks*/
		Kasutajad = user_input.nextInt();
			if (Kasutajad < 3){
				System.out.println("Kasutajaid on liiga vähe");
				return;
			} else {
				System.out.println("Kasutajaid on piisavalt");
			}
		/*Alljärgnev on näppude arvude sisse küsimiseks*/
		Scanner NappudeArv = new Scanner(System.in); /*Annab võimaluse kasutajalt otse infot küsida*/
		int Summa = 0; /*Anname teguri/nimetaja/loenduri*/
		for(int i=0; i<Kasutajad; i++){
            System.out.print("Kasutaja "+((char) i+1 )+" viskab näppe: "); /*Siin küsib iga järgneva käest uuesti näppe*/
			Summa = Summa + NappudeArv.nextInt(); /*Iga järgnev näppude kogus liidetakse eelmisele juurde*/
		}
		int Ring;
		
		/*Alljärgnev annab teada, mis on visatud näppude summa*/
		System.out.println("Näppude summa kokku on "+Summa);
		/*Alljärgnev annab teada, milline kasutaja on väljavalitu*/
		System.out.println(Summa - (((int) Summa/ Kasutajad)*Kasutajad)+1);
		
	}
}
